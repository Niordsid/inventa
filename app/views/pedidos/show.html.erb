    <th>Solicitado</th>
    <th>Surtido</th>
  </thead>
  <tbody>
    <% @articulos.each do |articulo| %>
      <tr>
        <td> <%= articulo.codigo %> </td>
        <td> <%= articulo.descripcion %></td>
        <td> <%= articulo.solicitado %> </td>
        <td> <%= articulo.surtido %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

  <%= link_to pedido_path(@pedido, :format => 'pdf'), class: "btn btn-primary", :target => "_blank" do%>
